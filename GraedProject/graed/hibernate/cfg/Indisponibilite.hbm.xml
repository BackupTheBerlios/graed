<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="graed.indisponibilite.Indisponibilite" table="indisponibilite">

        <!-- Une chaîne de 32 caractères hexadécimaux est notre
	    clé technique. Elle est générée automatiquement par 
	    Hibernate en utilisant le pattern UUID. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="id_salle" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

        <set name="ressources">
             <key column="id_indisponibilite"/>
             <one-to-many class="graed.ressource.Ressource"/>
        </set>

    </class>

</hibernate-mapping>