<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="hibernate.Professeur" table="Professeur">

        <!-- Une chaîne de 32 caractères hexadécimaux est notre
	    clé technique. Elle est générée automatiquement par 
	    Hibernate en utilisant le pattern UUID. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="PRO_ID" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

        <property name="firstName">
            <column name="firstName" sql-type="char(16)" not-null="true"/>
        </property>

        <property name="lastName">
        	<column name="lastName" sql-type="char(16)" not-null="true"/>
        </property>

        <property name="birthday">
        	<column name="birthday" sql-type="date" not-null="true"/>
        </property>

    </class>

</hibernate-mapping>