<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="hibernate.Teacher" table="Utilisateur">

        <!-- Une chaîne de 32 caractères hexadécimaux est notre
	    clé technique. Elle est générée automatiquement par 
	    Hibernate en utilisant le pattern UUID. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="id-utilisateur" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

        <property name="name">
            <column name="nom" sql-type="varchar(16)" not-null="true"/>
        </property>

        <property name="firstName">
        	<column name="prenom" sql-type="varchar(16)" not-null="true"/>
        </property>

		<property name="office">
        	<column name="bureau" sql-type="varchar(5)" not-null="false"/>
        </property>

		<property name="phone">
        	<column name="telephone" sql-type="varchar(16)" not-null="false"/>
        </property>

        <!--
        <property name="login">
        	<column name="login" sql-type="varchar(8)" not-null="true"/>
        </property>
        
        <property name="password">
        	<column name="login" sql-type="varchar(16)" not-null="true"/>
        </property>
               
        <property name="role">
        	<column name="login" sql-type="varchar(16)" not-null="true"/>
        </property>
        -->
        
        <property name="email">
        	<column name="courriel" sql-type="varchar(64)" not-null="true"/>
        </property>

    </class>

</hibernate-mapping>