<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>

    <class name="hibernate.Room" table="salle">

        <!-- Une chaîne de 32 caractères hexadécimaux est notre
	    clé technique. Elle est générée automatiquement par 
	    Hibernate en utilisant le pattern UUID. -->
        <id name="id" type="string" unsaved-value="null" >
            <column name="PRO_ID" sql-type="char(32)" not-null="true"/>
            <generator class="uuid.hex"/>
        </id>

        <property name="nom">
            <column name="nom" sql-type="varchar(12)" not-null="true"/>
        </property>

        <property name="batiment">
        	<column name="batiment" sql-type="varchar(30)" not-null="true"/>
        </property>

        <property name="lieu">
        	<column name="lieu" sql-type="varchar(30)" not-null="true"/>
        </property>
        
        <property name="capacite">
        	<column name="" sql-type="integer" not-null="false"/>
        </property>

    </class>

</hibernate-mapping>